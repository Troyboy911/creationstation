# CreationStation API Configuration
# Copy this file to .env.local and fill in your API keys

# OpenAI API for AI code generation and chat features
VITE_OPENAI_API_KEY=your_openai_api_key_here

# Firebase Configuration (get from Firebase Console)
VITE_FIREBASE_API_KEY=your_firebase_api_key
VITE_FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your_project_id
VITE_FIREBASE_STORAGE_BUCKET=your_project.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
VITE_FIREBASE_APP_ID=your_app_id

# GitHub API for repository integration
VITE_GITHUB_TOKEN=your_github_personal_access_token
VITE_GITHUB_CLIENT_ID=your_github_oauth_app_client_id
VITE_GITHUB_CLIENT_SECRET=your_github_oauth_app_client_secret

# Google Console for OAuth and Drive integration
VITE_GOOGLE_CLIENT_ID=your_google_oauth_client_id
VITE_GOOGLE_CLIENT_SECRET=your_google_oauth_client_secret
VITE_GOOGLE_API_KEY=your_google_api_key

# Shopify for e-commerce integration
VITE_SHOPIFY_API_KEY=your_shopify_api_key
VITE_SHOPIFY_API_SECRET=your_shopify_api_secret
VITE_SHOPIFY_STORE_URL=your_store.myshopify.com

# Stripe for payment processing
VITE_STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key
VITE_STRIPE_SECRET_KEY=your_stripe_secret_key

# Netlify for deployment
VITE_NETLIFY_SITE_ID=your_netlify_site_id
VITE_NETLIFY_ACCESS_TOKEN=your_netlify_access_token

# Tana for knowledge management
VITE_TANA_API_KEY=your_tana_api_key
VITE_TANA_WORKSPACE_ID=your_tana_workspace_id

# n8n for automation workflows
VITE_N8N_WEBHOOK_URL=your_n8n_webhook_url
VITE_N8N_API_KEY=your_n8n_api_key

# NeonDB for PostgreSQL database (alternative to Firebase)
VITE_NEON_DATABASE_URL=your_neon_database_url
VITE_NEON_API_KEY=your_neon_api_key

# Portainer for container management
VITE_PORTAINER_URL=your_portainer_instance_url
VITE_PORTAINER_API_KEY=your_portainer_api_key

# Application Configuration
VITE_APP_NAME=CreationStation-GitHubEdition
VITE_APP_VERSION=1.0.0
VITE_ENVIRONMENT=development
